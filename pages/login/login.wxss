page {
    overflow: hidden;
}

.bg {
    background-repeat: no-repeat;
}
.bg view {
    padding: 0 50rpx;
}
.telephone {
    margin-bottom: 25rpx;
}
.telephone input {
    border: 1px solid #ccc;
    height: 80rpx;
    border-radius: 10rpx;
    text-indent: 5rem;
    margin-right: 10rpx;
}
.telephone button {
    background-color: #e50150;
}
.code {
    margin-bottom: 30rpx;
}
.code input {
    border: 1px solid #ccc;
    height: 80rpx;
    margin-bottom: 40rpx;
    border-radius: 10rpx;
    text-indent: 50rpx;
}